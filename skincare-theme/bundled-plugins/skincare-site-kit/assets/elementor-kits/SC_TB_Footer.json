{
    "version": "0.4",
    "title": "Footer principal",
    "type": "footer",
    "content": [
        {
            "id": "section_newsletter",
            "elType": "section",
            "settings": {
                "background_color": "#ffeeef",
                "padding": { "unit": "px", "top": "40", "right": "0", "bottom": "40", "left": "0" }
            },
            "elements": [
                {
                    "id": "col_newsletter",
                    "elType": "column",
                    "settings": { "_column_size": 100 },
                    "elements": [
                        {
                            "id": "newsletter_heading",
                            "elType": "widget",
                            "widgetType": "heading",
                            "settings": {
                                "title": "Regístrate y recibe 10% de descuento en tu primera compra",
                                "align": "center"
                            }
                        },
                        {
                            "id": "newsletter_form",
                            "elType": "widget",
                            "widgetType": "form",
                            "settings": {
                                "form_name": "Newsletter Footer",
                                "submit_text": "Suscribirme",
                                "button_width": "20",
                                "align": "center"
                            }
                        },
                        {
                            "id": "social_icons",
                            "elType": "widget",
                            "widgetType": "social-icons",
                            "settings": {
                                "social_icon_list": [
                                    { "social_icon": { "value": "fab fa-instagram", "library": "fa-brands" } },
                                    { "social_icon": { "value": "fab fa-facebook", "library": "fa-brands" } },
                                    { "social_icon": { "value": "fab fa-tiktok", "library": "fa-brands" } },
                                    { "social_icon": { "value": "fab fa-pinterest", "library": "fa-brands" } },
                                    { "social_icon": { "value": "fab fa-youtube", "library": "fa-brands" } }
                                ],
                                "shape": "circle",
                                "align": "center"
                            }
                        }
                    ]
                }
            ]
        },
        {
            "id": "section_links",
            "elType": "section",
            "settings": {
                "background_color": "#ffffff",
                "padding": { "unit": "px", "top": "50", "right": "0", "bottom": "20", "left": "0" }
            },
            "elements": [
                {
                    "id": "col_links_1",
                    "elType": "column",
                    "settings": { "_column_size": 25 },
                    "elements": [
                        {
                            "id": "heading_info",
                            "elType": "widget",
                            "widgetType": "heading",
                            "settings": { "title": "Información", "header_size": "h4" }
                        },
                        {
                            "id": "list_info",
                            "elType": "widget",
                            "widgetType": "icon-list",
                            "settings": {
                                "icon_list": [
                                    { "text": "Programa de recompensas", "link": { "url": "/rewards/" } },
                                    { "text": "Términos y condiciones", "link": { "url": "/terms/" } },
                                    { "text": "Política de privacidad", "link": { "url": "/privacy-policy/" } }
                                ]
                            }
                        }
                    ]
                },
                {
                    "id": "col_links_2",
                    "elType": "column",
                    "settings": { "_column_size": 25 },
                    "elements": [
                        {
                            "id": "heading_help",
                            "elType": "widget",
                            "widgetType": "heading",
                            "settings": { "title": "Enlaces útiles", "header_size": "h4" }
                        },
                        {
                            "id": "list_help",
                            "elType": "widget",
                            "widgetType": "icon-list",
                            "settings": {
                                "icon_list": [
                                    { "text": "Trabaja con nosotros", "link": { "url": "/care/" } },
                                    { "text": "Prensa", "link": { "url": "/skin/" } },
                                    { "text": "Skincare coreano", "link": { "url": "/korean/" } }
                                ]
                            }
                        }
                    ]
                },
                {
                    "id": "col_links_3",
                    "elType": "column",
                    "settings": { "_column_size": 25 },
                    "elements": [
                        {
                            "id": "list_big_links",
                            "elType": "widget",
                            "widgetType": "icon-list",
                            "settings": {
                                "icon_list": [
                                    { "text": "Contáctanos", "link": { "url": "/contact/" } },
                                    { "text": "Ayuda y FAQs", "link": { "url": "/faqs/" } },
                                    { "text": "Envíos y devoluciones", "link": { "url": "/shipping/" } },
                                    { "text": "Localizador de tiendas", "link": { "url": "/store-locator/" } }
                                ]
                            }
                        }
                    ]
                },
                {
                    "id": "col_brand",
                    "elType": "column",
                    "settings": { "_column_size": 25 },
                    "elements": [
                        {
                            "id": "footer_logo",
                            "elType": "widget",
                            "widgetType": "theme-site-logo",
                            "settings": { "align": "center" }
                        },
                        {
                            "id": "trustpilot",
                            "elType": "widget",
                            "widgetType": "heading",
                            "settings": { "title": "Excelente en Trustpilot", "align": "center", "header_size": "h5" }
                        }
                    ]
                }
            ]
        },
        {
            "id": "section_bottom",
            "elType": "section",
            "settings": {
                "padding": { "unit": "px", "top": "20", "right": "0", "bottom": "20", "left": "0" },
                "border_width": { "unit": "px", "top": "1", "right": "0", "bottom": "0", "left": "0" },
                "border_color": "#eee"
            },
            "elements": [
                {
                    "id": "col_payment",
                    "elType": "column",
                    "settings": { "_column_size": 100 },
                    "elements": [
                        {
                            "id": "payment_icons",
                            "elType": "widget",
                            "widgetType": "image",
                            "settings": { "caption": "Visa, Mastercard, Amex, PayPal, Klarna, Apple Pay" }
                        }
                    ]
                }
            ]
        }
    ]
}
